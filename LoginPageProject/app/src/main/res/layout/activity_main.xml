<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#32a1a1"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_Kaydol"
        android:layout_width="322dp"
        android:layout_height="83dp"
        android:layout_marginBottom="200dp"
        android:onClick="sqlprog"
        android:text="KAYDOL"
        android:textSize="34sp"
        android:textStyle="bold"
        app:backgroundTint="#323131"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="145dp"
        android:layout_height="134dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/atat_rk" />

    <Button
        android:id="@+id/button_Giris"
        android:layout_width="322dp"
        android:layout_height="83dp"
        android:layout_marginBottom="296dp"
        android:onClick="sqlprog"
        android:text="GİRİŞ"
        android:textSize="34sp"
        android:textStyle="bold"
        app:backgroundTint="#323131"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView_Sifre"
        android:layout_width="162dp"
        android:layout_height="64dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:text="Şifre : "
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_KullanıcıAdı" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="200sp"
        android:layout_height="64sp"
        android:layout_marginTop="164dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:hint="Buraya!"
        android:inputType="textPersonName"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="199dp"
        android:layout_height="62dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="12dp"
        android:ems="10"
        android:hint="Buraya!"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName" />

    <TextView
        android:id="@+id/textView_KullanıcıAdı"
        android:layout_width="162dp"
        android:layout_height="64dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="164dp"
        android:gravity="center"
        android:text="Kullanıcı Adı : "
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>