<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView_islem"
        android:layout_width="409dp"
        android:layout_height="128dp"
        android:textAlignment="textEnd"
        android:textColor="#FFFFFF"
        android:textIsSelectable="false"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout_butonlar"
        android:layout_width="408dp"
        android:layout_height="470dp"
        android:background="#2B2929"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/button_C"
            android:layout_width="100dp"
            android:layout_height="93dp"
            android:layout_marginBottom="1dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="C"
            android:textSize="48sp"
            android:textStyle="bold"
            app:backgroundTint="#000000"
            app:elevation="0dp"
            app:layout_constraintBottom_toTopOf="@+id/button_7"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/button_x"
            android:layout_width="100dp"
            android:layout_height="93dp"
            android:layout_marginStart="1dp"
            android:layout_marginBottom="1dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="x"
            android:textSize="34sp"
            android:textStyle="bold"
            app:backgroundTint="#000000"
            app:elevation="0dp"
            app:layout_constraintBottom_toTopOf="@+id/button_9"
            app:layout_constraintStart_toEndOf="@+id/button_5" />

        <Button
            android:id="@+id/button_silme"
            android:layout_width="105dp"
            android:layout_height="93dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="1dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="~"
            android:textSize="48sp"
            android:textStyle="bold"
            app:backgroundTint="#000000"
            app:elevation="0dp"
            app:layout_constraintStart_toEndOf="@+id/button_6"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_bolme"
            android:layout_width="100dp"
            android:layout_height="93dp"
            android:layout_marginStart="1dp"
            android:layout_marginBottom="1dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="/"
            android:textSize="48sp"
            android:textStyle="bold"
            app:backgroundTint="#000000"
            app:elevation="0dp"
            app:layout_constraintBottom_toTopOf="@+id/button_8"
            app:layout_constraintStart_toEndOf="@+id/button_4" />

        <Button
            android:id="@+id/button_eksi"
            android:layout_width="105dp"
            android:layout_height="93dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="-"
            android:textSize="48sp"
            android:textStyle="bold"
            app:backgroundTint="#000000"
            app:elevation="0dp"
            app:layout_constraintBottom_toTopOf="@+id/button_arti"
            app:layout_constraintStart_toEndOf="@+id/button_6"
            app:layout_constraintTop_toBottomOf="@+id/button_silme" />

        <Button
            android:id="@+id/button_7"
            android:layout_width="100dp"
            android:layout_height="93dp"
            android:layout_marginBottom="1dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="7"
            android:textSize="48sp"
            android:textStyle="bold"
            app:backgroundTint="#000000"
            app:elevation="0dp"
            app:layout_constraintBottom_toTopOf="@+id/button_4"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/button_8"
            android:layout_width="100dp"
            android:layout_height="93dp"
            android:layout_marginStart="1dp"
            android:layout_marginBottom="1dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="8"
            android:textSize="48sp"
            android:textStyle="bold"
            app:backgroundTint="#000000"
            app:elevation="0dp"
            app:layout_constraintBottom_toTopOf="@+id/button_5"
            app:layout_constraintStart_toEndOf="@+id/button_4" />

        <Button
            android:id="@+id/button_9"
            android:layout_width="100dp"
            android:layout_height="93dp"
            android:layout_marginStart="1dp"
            android:layout_marginBottom="1dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="9"
            android:textSize="48sp"
            android:textStyle="bold"
            app:backgroundTint="#000000"
            app:elevation="0dp"
            app:layout_constraintBottom_toTopOf="@+id/button_6"
            app:layout_constraintStart_toEndOf="@+id/button_5" />

        <Button
            android:id="@+id/button_1"
            android:layout_width="100dp"
            android:layout_height="93dp"
            android:layout_marginBottom="94dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="1"
            android:textSize="48sp"
            android:textStyle="bold"
            app:backgroundTint="#000000"
            app:elevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/button_2"
            android:layout_width="100dp"
            android:layout_height="93dp"
            android:layout_marginStart="1dp"
            android:layout_marginBottom="94dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="2"
            android:textSize="48sp"
            android:textStyle="bold"
            app:backgroundTint="#000000"
            app:elevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button_4" />

        <Button
            android:id="@+id/button_3"
            android:layout_width="100dp"
            android:layout_height="93dp"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="94dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="3"
            android:textSize="48sp"
            android:textStyle="bold"
            app:backgroundTint="#000000"
            app:elevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_esittir"
            app:layout_constraintStart_toEndOf="@+id/button_2" />

        <Button
            android:id="@+id/button_0"
            android:layout_width="201dp"
            android:layout_height="93dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="0"
            android:textSize="48sp"
            android:textStyle="bold"
            app:backgroundTint="#000000"
            app:elevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/button_nokta"
            android:layout_width="100dp"
            android:layout_height="93dp"
            android:layout_marginEnd="1dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="."
            android:textSize="48sp"
            app:backgroundTint="#000000"
            app:elevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_esittir" />

        <Button
            android:id="@+id/button_esittir"
            android:layout_width="105dp"
            android:layout_height="187dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="="
            android:textColor="#ECECEC"
            android:textSize="96sp"
            android:textStyle="bold"
            app:backgroundTint="#000000"
            app:elevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/button_4"
            android:layout_width="100dp"
            android:layout_height="93dp"
            android:layout_marginBottom="1dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="4"
            android:textSize="48sp"
            android:textStyle="bold"
            app:backgroundTint="#000000"
            app:elevation="0dp"
            app:layout_constraintBottom_toTopOf="@+id/button_1"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/button_5"
            android:layout_width="100dp"
            android:layout_height="93dp"
            android:layout_marginStart="1dp"
            android:layout_marginBottom="1dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="5"
            android:textSize="48sp"
            android:textStyle="bold"
            app:backgroundTint="#000000"
            app:elevation="0dp"
            app:layout_constraintBottom_toTopOf="@+id/button_2"
            app:layout_constraintStart_toEndOf="@+id/button_4" />

        <Button
            android:id="@+id/button_arti"
            android:layout_width="105dp"
            android:layout_height="93dp"
            android:layout_marginStart="1dp"
            android:layout_marginBottom="1dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="+"
            android:textSize="48sp"
            android:textStyle="bold"
            app:backgroundTint="#000000"
            app:elevation="0dp"
            app:layout_constraintBottom_toTopOf="@+id/button_esittir"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button_6" />

        <Button
            android:id="@+id/button_6"
            android:layout_width="100dp"
            android:layout_height="93dp"
            android:layout_marginStart="1dp"
            android:layout_marginBottom="1dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="6"
            android:textSize="48sp"
            android:textStyle="bold"
            app:backgroundTint="#000000"
            app:elevation="0dp"
            app:layout_constraintBottom_toTopOf="@+id/button_3"
            app:layout_constraintStart_toEndOf="@+id/button_5" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView_sonuc"
        android:layout_width="407dp"
        android:layout_height="131dp"
        android:textAlignment="textEnd"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout_butonlar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
